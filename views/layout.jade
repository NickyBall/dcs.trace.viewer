doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title #{title}
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(rel='stylesheet', href='../adminlte2/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='../adminlte2/bower_components/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='../adminlte2/bower_components/Ionicons/css/ionicons.min.css')
    link(rel='stylesheet', href='../adminlte2/dist/css/AdminLTE.min.css')
    link(rel='stylesheet', href='../adminlte2/dist/css/skins/_all-skins.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic')
    block styles
  body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      header.main-header
        // Logo
        a.logo(href='/')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini DCS
          // logo for regular state and mobile devices
          span.logo-lg
            b DCS
            | Trace Viewer
        // Header Navbar: style can be found in header.less
        nav.navbar.navbar-static-top
          a.sidebar-toggle(href='#', data-toggle='push-menu', role='button')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          .navbar-custom-menu
      // ===============================================
      // Left side column. contains the sidebar
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // Sidebar user panel
          .user-panel
            .pull-left.image
              img.img-circle(src='../adminlte2/dist/img/user2-160x160.jpg', alt='User Image')
            .pull-left.info
              p #{user.username}
              a(href='#')
                i.fa.fa-circle.text-success
                |  Online
          // sidebar menu: : style can be found in sidebar.less
          ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
            li.treeview
              a(href='/')
                i.fa.fa-dashboard
                span Dashboard
            li.treeview
              a(href='/view')
                i.fa.fa-list
                span Monitor
      // ===============================================
      // Content Wrapper. Contains page content
      .content-wrapper
        block content
      footer.main-footer
        .pull-right.hidden-xs
          b Version
          |  2.4.0
        strong
          | Copyright Â© 2018 
          a(href='https://appswin.co.th') Appswin Limited Partnership
          | .
        |  All rights
        |         reserved.
    // jQuery 3
    script(src='../adminlte2/bower_components/jquery/dist/jquery.min.js')
    // Bootstrap 3.3.7
    script(src='../adminlte2/bower_components/bootstrap/dist/js/bootstrap.min.js')
    // SlimScroll
    script(src='../adminlte2/bower_components/jquery-slimscroll/jquery.slimscroll.min.js')
    // FastClick
    script(src='../adminlte2/bower_components/fastclick/lib/fastclick.js')
    // AdminLTE App
    script(src='../adminlte2/dist/js/adminlte.min.js')
    // AdminLTE for demo purposes
    script(src='../adminlte2/dist/js/demo.js')
    block scripts
    script.
      $(document).ready(function () {
      $('.sidebar-menu').tree()
      })
